#include <iostream>
#include <cmath> //"Math.h"
using namespace std;

int main()
{
    float a, b, c, A, s;
    cout<<"Ingresar primer lado: ";
    cin>>a;
    cout<<"Ingrese segundo lado: ";
    cin>>b;
    cout<<"Ingrese el tercer lado: ";
    cin>>c;
    s=(a+b+c)/2;
    A= sqrt (s*(s-a)*(s-b)*(s-c));
    cout<<"Escribir el Area es:"<<A;
    return 0;
    
}
